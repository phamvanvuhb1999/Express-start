extends ../layouts/common.pug

block content
	h1 create user

	if errors
		.alert.alert-danger=errors

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", value=view ? view.name : "")

		.form-group
			label(for="number") number
			input#number.form-control(name="number", type="text",value=view ? view.number : "")

		.form-group
			label(for="avatar") avatar
			input#avatar.form-control-file(name="avatar", type="file")

		button.btn.btn-primary create