extends ../layouts/common.pug

block content

	nav.navbar-expand-lg.navbar-light.bg-light.d-flex
		a.navbar-brand(href="#") Express start
		button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
			span.navbar-toggler-icon
		#navbarNav.collapse.navbar-collapse
			ul.navbar-nav
				li.nav-item
					a.nav-link(href="#") Home
				li.nav-item
					a.nav-link(href="#") Users

		if user
			a(href="#", style="padding-top:5px")=user.name
	.d-flex.align-item-center
		form.ml-auto(action="/product/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search
	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-3
					img.car-img-top(src=product.image)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href='/cart/add/' + product.id) Addtocart
